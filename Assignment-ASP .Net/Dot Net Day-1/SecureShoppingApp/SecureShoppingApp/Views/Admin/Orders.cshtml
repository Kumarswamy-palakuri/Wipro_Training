@model IEnumerable<SecureShoppingApp.Models.Order>
@{
    ViewData["Title"] = "Orders Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order #</th>
                    <th>Customer</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Total Amount</th>
                    <th>Order Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>#@order.Id</td>
                        <td>@Html.Encode($"{order.User.FirstName} {order.User.LastName}")</td>
                        <td>@Html.Encode(order.Product.Name)</td>
                        <td>@order.Quantity</td>
                        <td>$@order.TotalAmount.ToString("F2")</td>
                        <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>
                            <a asp-action="OrderDetails" asp-route-id="@order.Id"
                               class="btn btn-outline-info btn-sm">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No orders found</h4>
        <p>There are no orders in the system yet.</p>
    </div>
}
