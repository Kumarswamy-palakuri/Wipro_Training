@model SecureShoppingApp.Models.Product
@{
    ViewData["Title"] = Html.Encode(Model.Name);
}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">@Html.Encode(Model.Name)</h1>
                    <p class="card-text">@Html.Encode(Model.Description)</p>
                    <h3 class="text-success">$@Model.Price.ToString("F2")</h3>

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <hr>
                        <h5>Place an Order</h5>
                        <form asp-controller="Product" asp-action="Order" method="post">
                            <input type="hidden" name="ProductId" value="@Model.Id" />
                            <input type="hidden" name="ProductName" value="@Model.Name" />
                            <input type="hidden" name="ProductPrice" value="@Model.Price" />

                            <div class="form-group mb-3">
                                <label for="Quantity" class="form-label">Quantity:</label>
                                <input type="number" name="Quantity" class="form-control" value="1" min="1" max="100" required />
                            </div>

                            <button type="submit" class="btn btn-success">Add to Cart</button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Login</a> to place an order.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Product Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
                    <p><strong>Product ID:</strong> @Model.Id</p>
                    <p><strong>Added:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">← Back to Products</a>
    </div>
</div>
