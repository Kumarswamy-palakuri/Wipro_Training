@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Product Management System</h1>
    @* <p>A secure role-based product management application built with ASP.NET Core MVC.</p> *@

    @if (User.Identity.IsAuthenticated)
    {
        <div class="mt-4">
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary btn-lg">
                Go to Products
            </a>
        </div>

        <div class="mt-3">
            <p>Welcome back, <strong>@User.Identity.Name</strong>!</p>
            <p>Your role: <span class="badge bg-info">@(User.IsInRole("Admin") ? "Administrator" : "Manager")</span></p>
        </div>
    }
    else
    {
        <div class="mt-4">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-lg me-3">
                Login
            </a>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-secondary btn-lg">
                Register
            </a>
        </div>
    }
</div>

