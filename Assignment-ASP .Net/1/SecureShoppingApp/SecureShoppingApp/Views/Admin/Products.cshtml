@model IEnumerable<SecureShoppingApp.Models.Product>
@{
    ViewData["Title"] = "Products Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>@ViewData["Title"]</h1>
    <div>
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add New Product</a>
        <a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@Html.Encode(product.Name)</td>
                        <td>@Html.Encode(product.Description.Substring(0, Math.Min(product.Description.Length, 100)))@(product.Description.Length > 100 ? "..." : "")</td>
                        <td>$@product.Price.ToString("F2")</td>
                        <td>@product.CreatedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"
                                   class="btn btn-outline-info">View</a>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id"
                                   class="btn btn-outline-secondary">Edit</a>
                                <form asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id"
                                      method="post" class="d-inline"
                                      onsubmit="return confirm('Are you sure you want to delete this product?')">
                                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <h4>No products found</h4>
        <p>There are no products in the system yet.</p>
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add the first product</a>
    </div>
}
